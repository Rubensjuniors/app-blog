{
  "name": "my-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start-local": "PORT=3009 next dev",
    "build": "contentlayer build && next build",
    "start": "next start",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint src --max-warnings=0",
